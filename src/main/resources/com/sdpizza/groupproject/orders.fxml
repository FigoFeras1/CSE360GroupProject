                  <CheckBox layoutX="163.0" layoutY="89.0" mnemonicParsing="false" text="Onions" />
                  <Label text="Size">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label layoutX="75.0" text="Base">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label layoutX="163.0" text="Toppings">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
