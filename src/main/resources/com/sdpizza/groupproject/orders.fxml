<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sdpizza.groupproject.Controller">
    <children>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label text="Order Menu">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Label>
            <RadioButton layoutX="39.0" layoutY="118.0" mnemonicParsing="false" text="Small">
               <toggleGroup>
                  <ToggleGroup fx:id="SizeToggle" />
               </toggleGroup></RadioButton>
            <RadioButton layoutX="39.0" layoutY="144.0" mnemonicParsing="false" text="Medium" toggleGroup="$SizeToggle" />
            <RadioButton layoutX="39.0" layoutY="172.0" mnemonicParsing="false" text="Large" toggleGroup="$SizeToggle" />
            <RadioButton layoutX="136.0" layoutY="118.0" mnemonicParsing="false" text="Cheese">
               <toggleGroup>
                  <ToggleGroup fx:id="BaseToggle" />
               </toggleGroup></RadioButton>
            <RadioButton layoutX="136.0" layoutY="144.0" mnemonicParsing="false" text="Pepperoni" toggleGroup="$BaseToggle" />
            <RadioButton layoutX="136.0" layoutY="172.0" mnemonicParsing="false" text="Vegan" toggleGroup="$BaseToggle" />
            <CheckBox layoutX="245.0" layoutY="118.0" mnemonicParsing="false" text="Extra Cheese" />
            <CheckBox layoutX="245.0" layoutY="144.0" mnemonicParsing="false" text="Mushrooms" />
            <CheckBox layoutX="245.0" layoutY="172.0" mnemonicParsing="false" text="Olives" />
            <CheckBox layoutX="245.0" layoutY="200.0" mnemonicParsing="false" text="Onions" />
            <TextField layoutX="15.0" layoutY="87.0" prefHeight="25.0" prefWidth="98.0" text="Select Your Size" />
            <TextField layoutX="121.0" layoutY="87.0" prefHeight="25.0" prefWidth="105.0" text="Select Your Base" />
            <TextField layoutX="230.0" layoutY="87.0" prefHeight="25.0" prefWidth="133.0" text="Select Your Toppings" />
            <Button fx:id="orderCancelButton" layoutX="372.0" layoutY="260.0" mnemonicParsing="false" onAction="#orderCancel" text="Cancel" />
            <Button fx:id="orderConfirmButton" layoutX="440.0" layoutY="260.0" mnemonicParsing="false" onAction="#orderConfirm" text="Checkout" />
            </children>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </AnchorPane>
    </children>
</VBox>
